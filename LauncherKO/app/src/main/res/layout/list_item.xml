<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:src="@android:drawable/ic_input_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/item_app_first_character"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/alert_dark_frame"
        android:id="@+id/item_app_icon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_app_first_character"
        android:layout_toEndOf="@+id/item_app_first_character"
        android:layout_alignBaseline="@+id/item_app_first_character" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/item_app_label"
        android:layout_alignRight="@+id/item_app_icon"
        android:layout_alignEnd="@+id/item_app_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/item_app_icon"
        android:layout_toEndOf="@+id/item_app_icon"
        android:layout_alignBaseline="@+id/item_app_first_character"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/item_app_name"
        android:layout_below="@+id/item_app_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/item_app_first_character"
        />


</RelativeLayout>